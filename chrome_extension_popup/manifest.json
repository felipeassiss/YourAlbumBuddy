{
  "manifest_version": 3,
  "name": "YourAlbumBuddy",
  "version": "1.0.0",
  "description": "Discover classic albums everyday!",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://musicbrainz.org/",
    "https://coverartarchive.org/"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}